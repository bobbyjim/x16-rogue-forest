{:panels.init}
;  ------------------------------------
rem set up panel arrays based on max
rem number of panels (n=6)
;  ------------------------------------
n = 6
\panel.count = 0
dim \panel.label$(n)
dim \panel.top(n), \panel.left(n), \panel.width(n), \panel.height(n)
dim \panel.line$(n,30), \panel.lineSelected(n)

gosub {:vertical-position.init} :rem init vp$()

;  -----------------------------------
rem horizontal bar array
;  -----------------------------------
dim hb$(80)
hb$(0) = "\xc3"
for v=1 to 80
   hb$(v) = hb$(v-1) + "\xc3"
next

;  -----------------------------------
rem vertical bar array
;  -----------------------------------
dim vb$(30)
vb$(0) = "\xc2\x11\x9d"
for v=1 to 30
   vb$(v) = vb$(v-1) + "\xc2\x11\x9d"
next

